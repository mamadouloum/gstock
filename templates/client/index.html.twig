{% extends 'template.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <div class ="container">
            <div class ="panel panel-primary">
                <div class ="panel-heading">
               <i class=""></i>Liste Client
            </div>
             
                <div class ="panel-body">

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>RespComm</th>
                <th>RespFinan</th>
                <th>AdrLiv</th>
                <th>AdrFacture</th>
                <th>Tel</th>
                <th>Portable</th>
                <th>Fax</th>
                <th>Email</th>
                <th>SoldeInit</th>
                <th>Solde</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.designation }}</td>
                <td>{{ client.RespComm }}</td>
                <td>{{ client.respFinan }}</td>
                <td>{{ client.adrLiv }}</td>
                <td>{{ client.adrFacture }}</td>
                <td>{{ client.tel }}</td>
                <td>{{ client.portable }}</td>
                <td>{{ client.fax }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.soldeInit }}</td>
                <td>{{ client.solde }}</td>
                <td>
                
                    <a href="{{ path('client_show', {'id': client.id}) }}"class = "btn btn-success">Voir</a>
                </td>
                <td>
                    <a href="{{ path('client_edit', {'id': client.id}) }}"class = "btn btn-warning">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}"class="btn btn-success">Créer nouveau</a>
</div>
</div>
</div>
{% endblock %}
